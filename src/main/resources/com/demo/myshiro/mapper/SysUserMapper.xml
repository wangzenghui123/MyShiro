<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.myshiro.dao.SysUserDao">
    <sql id=""></sql>

    <insert id="insert"   parameterType="com.demo.myshiro.entity.SysUser">
        insert into sys_user( id,username,password,salt,age,sex,phone,deptId,nickName,email,status,createId,updateId,deleted,createWhere,createTime,updateTime,deptName )
        values(
        #{id},#{username},#{password},#{salt},#{age},#{sex},#{phone},#{deptId},#{nickName},#{email},#{status},#{createId},
        #{updateId},#{deleted},#{createWhere},#{createTime},#{updateTime},#{deptName}
        )
    </insert>

    <select id="selectAll" resultType="com.demo.myshiro.entity.SysUser" parameterType="java.lang.Integer">
        select id,username,password,salt,age,sex,phone,deptId,nickName,email,status,createId,updateId,createWhere,createTime,updateTime,deptName
        from sys_user
        where deleted = 0
    </select>

    <select id="queryUserByName" resultType="com.demo.myshiro.entity.SysUser" parameterType="com.demo.myshiro.vo.req.UserPageReqVO">
        select id,username,password,salt,age,sex,phone,deptId,nickName,email,status,createId,updateId,createWhere,createTime,updateTime,deptName
        from sys_user where username = #{username}
         and deleted = 0;
    </select>


</mapper>